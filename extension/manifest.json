{
  "manifest_version": 3,
  "name": "C.L.A.R.A.",
  "version": "1.0.8",
  "description": "Privacy-first tracker for AI tool usage. Local-only logs, reports, and pilot dashboards.",
  "action": { "default_popup": "popup.html" },
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
 "content_scripts": [
  {
    "matches": [
      "*://chatgpt.com/*",
      "*://*.chatgpt.com/*",

      "*://chat.openai.com/*",
      "*://*.openai.com/*",

      "*://claude.ai/*",
      "*://*.claude.ai/*",

      "*://gemini.google.com/*",

      "*://perplexity.ai/*",
      "*://*.perplexity.ai/*",

      "*://midjourney.com/*",
      "*://*.midjourney.com/*",

      "*://runwayml.com/*",
      "*://*.runwayml.com/*",

      "*://poe.com/*",
      "*://*.poe.com/*"
    ],
    "js": ["heartbeat.js"],
    "run_at": "document_idle"
  }
],
  "permissions": ["storage", "alarms", "notifications", "tabs", "contextMenus"],
  "host_permissions": [],
  "web_accessible_resources": [
    { "resources": ["icons/*", "assets/*"], "matches": ["<all_urls>"] }
  ]
}